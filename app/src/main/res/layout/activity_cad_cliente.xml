<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CadClienteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@android:dimen/thumbnail_height"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ctNome"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_button"
            android:backgroundTint="@color/grey"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="4dp"
            android:ems="10"
            android:hint="@string/usu"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHighlight="@color/roxo"
            android:textColorHint="@color/roxo" />

        <EditText
            android:id="@+id/ctEmailc"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_button"
            android:backgroundTint="@color/grey"
            android:drawableLeft="@drawable/ic_mail"
            android:drawablePadding="4dp"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHighlight="@color/roxo"
            android:textColorHint="@color/roxo" />

        <EditText
            android:id="@+id/ctUsuario"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_button"
            android:backgroundTint="@color/grey"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="4dp"
            android:ems="10"
            android:hint="@string/usu"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHighlight="@color/roxo"
            android:textColorHint="@color/roxo" />

        <EditText
            android:id="@+id/ctSenhal"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_button"
            android:backgroundTint="@color/grey"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="4dp"
            android:ems="10"
            android:hint="@string/senha"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHighlight="@color/roxo"
            android:textColorHint="@color/roxo" />

        <EditText
            android:id="@+id/ctRepSenha"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_button"
            android:backgroundTint="@color/grey"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="4dp"
            android:ems="10"
            android:hint="@string/comfsenha"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHighlight="@color/roxo"
            android:textColorHint="@color/roxo" />

        <Button
            android:id="@+id/btCadCli"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button"
            android:backgroundTint="@color/roxo"
            android:text="Cadastrar"
            android:textAllCaps="false"
            android:textColor="#FAFAFA" />
    </LinearLayout>

</LinearLayout>