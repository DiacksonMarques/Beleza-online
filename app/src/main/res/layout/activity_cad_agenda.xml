<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fuund"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Cadastros.CadAgenda">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/adm" />

    <FrameLayout
        android:id="@+id/fgContainera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-350dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tiposervicoagend"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="-113dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginBottom="90dp"
                    android:text="Escolha uma data e horário:"
                    android:textColor="#FAFAFA" />

                <TextView
                    android:id="@+id/tvData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="50dp"
                    android:text="Selecione uma data"
                    android:textColor="#FAFAFA" />

                <TextView
                    android:id="@+id/tvHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="118dp"
                    android:layout_marginLeft="118dp"
                    android:layout_marginTop="50dp"
                    android:layout_toEndOf="@+id/tvData"
                    android:layout_toRightOf="@+id/tvData"
                    android:text="@string/selecione_a_hora"
                    android:textColor="#FAFAFA" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tiposervicoagend"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="37dp"
                    android:text="Funcionário Para o Serviço"
                    android:textColor="#FAFAFA" />

                <Spinner
                    android:id="@+id/funcionario"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="202dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginBottom="28dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/funcionario"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="33dp"
                    android:text="Cadastrar Tipos de Serviço:"
                    android:textColor="#FAFAFA" />

                <Spinner
                    android:id="@+id/tiposervicoagend"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="127dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginBottom="28dp" />
            </RelativeLayout>

        </ScrollView>

    </FrameLayout>


    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Valor a ser pago pelo serviço:"
        android:textColor="#FAFAFA" />

    <TextView
        android:id="@+id/tvValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Valor a ser pago"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btCadAgend"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_button"
        android:text="Salvar"
        android:textColor="@color/colorPrimary" />

</LinearLayout>