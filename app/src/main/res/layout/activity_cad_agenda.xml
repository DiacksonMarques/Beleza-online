<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/fundo"
    tools:context=".Cadastros.CadAgenda">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Esc"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Escolha o serviÃ§o"
            android:textColor="@color/roxo"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Escolha a data"
            android:textColor="@color/roxo"
            android:textSize="15sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/tiposervicoagend"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:scrollbarThumbHorizontal="@drawable/custom_gradientrounded"
            android:scrollbarThumbVertical="@drawable/custom_gradientt"></Spinner>

        <TextView
            android:id="@+id/tvData"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="DD/MM/AAAA"
            android:textColor="@color/roxo"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/btCadAgd"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#FAFAFA"
        android:backgroundTint="@color/roxo"
        android:background="@drawable/custom_button"
        android:text="Salvar" />

    <ListView
        android:id="@+id/lvAgenda"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>