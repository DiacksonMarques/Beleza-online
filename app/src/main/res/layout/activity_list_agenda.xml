<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundo"
    tools:context=".Activis.ListAgendaActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Agendamentos"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#2E2C2C"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btCadAgdList"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/custom_buttonstroke"
            android:text="Cadastrar Agendamento "
            android:textAllCaps="false"
            android:textColor="#691581"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btAgdDisp"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_buttonstroke"
            android:text="Agendamentos"
            android:textAllCaps="false"
            android:textColor="#691581"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Esc"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_salao"
            android:text="Escolha o serviÃ§o"
            android:textColor="@color/roxo"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Escolha a data"
            android:textColor="@color/roxo"
            android:drawableLeft="@drawable/ic_data"
            android:textSize="15sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/tiposervicoagend"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"></Spinner>

        <TextView
            android:id="@+id/tvDataListem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="DD/MM/AAAA"
            android:textColor="@color/roxo"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/btBuscarAnd"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="@color/roxo"
        android:text="Buscar"
        android:textAllCaps="false"
        android:textColor="#FAFAFA" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1"/>

</LinearLayout>