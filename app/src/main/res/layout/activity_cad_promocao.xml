<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cadastros.CadPromocaoActivity"
    android:background="@drawable/fuund">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Promoção"
        android:textAllCaps="true"
        android:textColor="#FAFAFA"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/edTitulo"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="@color/grey"
        android:drawableLeft="@drawable/ic_menu_send"
        android:drawablePadding="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="4dp"
        android:textColorHint="@color/colorPrimaryDark"
        android:hint="Título" />

    <EditText
        android:id="@+id/edDescrP"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="@color/grey"
        android:drawableLeft="@drawable/ic_menu_send"
        android:drawablePadding="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="4dp"
        android:textColorHint="@color/colorPrimaryDark"
        android:hint="Descrição"/>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="60dp"
        android:drawableLeft="@drawable/ic_data"
        android:drawablePadding="4dp"
        android:text="Data de espiração"
        android:textColor="#FAFAFA"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tvDataP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="DD/MM/AAAA"
        android:textColor="#FAFAFA"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btCadPromo"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_button"
        android:text="Salvar"
        android:textColor="@color/colorPrimaryDark" />
</LinearLayout>