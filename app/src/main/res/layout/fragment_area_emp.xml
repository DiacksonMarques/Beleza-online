<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="332dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="224dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btListAgd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/roxo"
                        android:text="Agendamento"
                        android:textColor="@color/branco" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btCadPromo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/roxo"
                        android:text="Promoção"
                        android:textColor="@color/branco" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/custom_gradientt"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_button" />

            <TextView
                android:id="@+id/tvNomeCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="Salão Beleza"
                android:textColor="#F3F3F3"
                android:textSize="24sp" />


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btCadloca"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/branco"
            android:drawableLeft="@drawable/ic_local"
            android:drawableRight="@drawable/ic_arrow"

            android:drawablePadding="8dp"
            android:gravity="left|center_horizontal"
            android:text="Cadastrar Localização"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btCadFunc"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/branco"
            android:drawableLeft="@drawable/ic_add_user"
            android:drawableRight="@drawable/ic_arrow"
            android:drawablePadding="11dp"
            android:gravity="left|center_horizontal"
            android:text="Cadastrar Funcionário"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btCadserv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/branco"
            android:drawableLeft="@drawable/ic_cadastro"
            android:drawableRight="@drawable/ic_arrow"
            android:drawablePadding="8dp"
            android:gravity="left|center_horizontal"
            android:text="Cadastrar Serviço"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btCadAgend"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/branco"
            android:drawableLeft="@drawable/ic_cadastro"
            android:drawableRight="@drawable/ic_arrow"
            android:drawablePadding="8dp"
            android:gravity="left|center_horizontal"
            android:text="Cadastrar Agendamento"
            android:textAllCaps="false"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>