<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="332dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/button17"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="224dp"
            android:background="@drawable/custom_buttonhalfro"
            android:text="@string/agendamento"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/button18"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginLeft="206dp"
            android:layout_marginTop="224dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_buttonhalfro"
            android:text="@string/promo_es"
            android:textColor="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_button" />

            <TextView
                android:id="@+id/tvNomeCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="Salão Beleza"
                android:textColor="#F3F3F3"
                android:textSize="24sp" />


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btCadloca"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_local"
            android:drawableRight="@drawable/ic_arrow"
            android:drawablePadding="8dp"
            android:gravity="left|center_horizontal"
            android:text="Cadastrar localização

"
            android:textAllCaps="false"

            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btCadFunc"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_addfunc"
            android:drawableRight="@drawable/ic_arrow"
            android:drawablePadding="11dp"
            android:gravity="left|center_horizontal"
            android:text="@string/cadastrar_funcion_rio"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btCadserv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_cad"
            android:drawableRight="@drawable/ic_arrow"
            android:drawablePadding="8dp"
            android:gravity="left|center_horizontal"
            android:text="@string/cadastrar_servi_o"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btCadAgend"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_cad"
            android:drawableRight="@drawable/ic_arrow"
            android:drawablePadding="8dp"
            android:gravity="left|center_horizontal"
            android:text="@string/cadastrar_agendamento"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>