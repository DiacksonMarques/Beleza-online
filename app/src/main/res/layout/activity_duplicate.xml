<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DuplicateActivity">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Duplicar agendamento"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#2E2C2C"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="60dp"
                android:drawableLeft="@drawable/ic_data"
                android:drawablePadding="4dp"
                android:text="Rotina"
                android:textColor="#302F2F"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvData"
                android:layout_width="182dp"
                android:layout_height="34dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_buttonstroke"
                android:gravity="center"
                android:text="Sáb, 17 de ago, 2019"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="60dp"
                android:drawableLeft="@drawable/ic_data"
                android:drawablePadding="4dp"
                android:text="Duplicar rotina"
                android:textColor="#302F2F"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvDataDu"
                android:layout_width="182dp"
                android:layout_height="34dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_buttonstroke"
                android:gravity="center"
                android:text="Sáb, 17 de ago, 2019"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btCadDup"
        android:layout_width="141dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="@color/roxo"
        android:text="Duplicar"
        android:textAllCaps="false"
        android:textColor="#fafafa"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/lvAgdnDupli"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1" />
</LinearLayout>


